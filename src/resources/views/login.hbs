<div id="logreg-forms">
        <form class="form-signin" id="formSignin" action="/auth/signin" method="POST">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
            <div class="social-login">
                <button class="btn facebook-btn social-btn" type="button"><span><i class="fab fa-facebook-f"></i> Sign in with Facebook</span> </button>
                <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i> Sign in with Google+</span> </button>
            </div>
            <p style="text-align:center"> OR  </p>
            <div class="alert alert-danger" id="alertDanger"  role="alert" hidden>
            </div>
            <div class="input-group mb-3">
              <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus="">
            </div>

            <div class="input-group mb-4">
              <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
            </div>

            <div class="input-group">
              <button class="btn btn-md btn-rounded btn-block form-control submit" type="submit"><i class="fas fa-sign-in-alt"></i> Sign in</button>
            </div>
            <hr>
            <!-- <p>Don't have an account!</p>  -->
            <button class="btn btn-primary btn-block" type="button" id="btn-signup"><i class="fas fa-user-plus"></i> Sign up New Account</button>
            </form>

            <form class="form-signup" id="formSignup" method="POST" action="/auth/signup">
                <div class="social-login">
                    <button class="btn facebook-btn social-btn" type="button"><span><i class="fab fa-facebook-f"></i> Sign up with Facebook</span> </button>
                  </div>
                  <div class="social-login">
                    <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i> Sign up with Google+</span> </button>
                </div>

                <p style="text-align:center">OR</p>

                <input type="text" id="user-name" name="nameSignup" class="form-control" placeholder="Full name" required autofocus="">
                <input type="email" id="user-email" name="emailSignup" class="form-control"  placeholder="Email address" required autofocus="">
                <input type="password" id="password" name="passwordSignup" class="form-control"  placeholder="Password" required autofocus="">
                <input type="password" id="confirm_password" name="repeatPasswordSignup" class="form-control"  placeholder="Confirm Password" required autofocus="">
                <span id='message'></span>
                <div class="input-group">
                <button class="btn btn-md btn-block submit" id="submit" name="submit"type="submit"><i class="fas fa-user-plus"></i> Sign Up</button>
                </div>
                <a  class="text-dark " href="#" id="cancel_signup"><i class="fa fa-angle-left"></i> Back</a>
            </form>
            <br>
    </div>
    <script>
      const name = $('input[name="nameSignup"]');
      const email = $('input[name="emailSignup"]');
      const password = $('input[name="passwordSignup"]');
      const repeatPassword = $('input[name="repeatPasswordSignup"]');
      const emailLogin = $('input[name="email"]');
      const passwordLogin = $('input[name="password"]');
      const alert = $('#alertDanger');
    //Check login 
    $('#formSignin').on('submit',function(e){
      if(emailLogin.val().length <= 0){
        e.preventDefault();
        alert.attr('hidden',false);
        alert.html('Invalid Email');
      }else if(passwordLogin.val().length <= 6){
        e.preventDefault();
        alert.attr('hidden',false);
        alert.html('Invalid PassWord !');
      }
    })
    function toggleResetPswd(e){
    e.preventDefault();
    $('#logreg-forms .form-signin').toggle() // display:block or none
    $('#logreg-forms .form-reset').toggle() // display:block or none
    }

    function toggleSignUp(e){
        e.preventDefault();
        $('#logreg-forms .form-signin').toggle(); // display:block or none
        $('#logreg-forms .form-signup').toggle(); // display:block or none
    }
     //check match password 
      $('#formSignup').on('submit', function(e){
        if(name.val().length <= 0 ){
              e.preventDefault();
              $('#message').html('Invalid Name !').css('color', 'red');
        }
        else if(email.val().length <= 6){
           e.preventDefault();
           $('#message').html('Invalid Email !').css('color', 'red');
        }
        else if(password.val() !== repeatPassword.val()) {
              e.preventDefault();
              $('#message').html('Invalid Password !').css('color', 'red');
        }
      })

    $(()=>{
        // Login Register Form
        $('#logreg-forms #forgot_pswd').click(toggleResetPswd);
        $('#logreg-forms #cancel_reset').click(toggleResetPswd);
        $('#logreg-forms #btn-signup').click(toggleSignUp);
        $('#logreg-forms #cancel_signup').click(toggleSignUp);
    })
   

    </script>
 